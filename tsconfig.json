{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "CommonJs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "alwaysStrict": false,
    "outDir": "./dist/"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ]
}